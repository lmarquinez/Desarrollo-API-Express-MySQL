extends ../index.pug

block form_new_post 
    form(action="/posts/create", method="post") 
        div.mb-3
            label.form-label Title 
            input.form-control(type="text", name="title" required)
        div.mb-3
            label.form-label Description
            textarea.form-control(name="description" required)
        div.mb-3
            label.form-label Category
            select.form-control(type="text", name="category" required)
                option(value='News') News 
                option(value='Sport') Sport 
                option(value='Opinion') Opinion 
                option(value='Photography') Photography 
                option(value='Research') Research 
        div.mb-3
            label.form-label Author
            select.form-control(type="number", name="authorId" required)
                each author in authors
                    option(value=author.authorid, required) #{author.name}
        input.btn.btn-info(type="submit", value="Send")